@model SmartBankUi.Models.BankUser

@{
    ViewBag.Title = "Your bank accounts";
}

<table class="table">
    <tr>
        <th>
            Account number
        </th>
        <th>
            Balance
        </th>
        <th>
            Show history
        </th>
    </tr>

    @foreach (var item in Model.BankAccounts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance) Ft
            </td>
            <td>
                @if (item.IsLocked)
                {
                    <text>Account is locked</text>
                }
                else
                {
                    @Html.ActionLink("Account history", "History", new { item.AccountNumber }, null)
                }
            </td>
        </tr>
    }
</table>